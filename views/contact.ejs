        <button class="btn btn-success float-right" type="submit">Logout</button>
    </form>
    </nav>
</div>
</div>
<section >
    <div class="container-fluid contacts">
        <h1>Welcome to the Contacts App</h1>
    
    </div>
    <div class="container addForm">
        <form action="/addContact" method="post">
            <!-- Name input -->
            <div class="form-outline mb-4">
              <input type="text" name="name" id="form4Example1" class="form-control" required/>
              <label class="form-label" for="form4Example1">Name</label>
            </div>
        
            <!-- Number input -->
            <div class="form-outline mb-4">
                <input type="number" name="number" id="form4Example3" class="form-control" required />
                <label class="form-label" for="form4Example3">Number</label>
              </div>
            
            
            <!-- Email input -->
            <div class="form-outline mb-4 ">
              <input type="email" name="email" id="form4Example2" class="form-control" />
              <label class="form-label" for="form4Example2">Email Address</label>
            </div>  
          
            <!-- Submit button -->
            <input type="submit" value="Add" class="btn btn-primary  mb-4 mt-2 col-lg-3"></input>
          </form>
    </div>

    <div class="container table-form"  id= <%= sTable  %>>
        <h1 class="form-heading">Saved Contacts</h1>
        <table class="table table-hide table-light table-hover">
            <thead >
              <tr >
                
                <th scope="col">Name</th>
                <th scope="col">Number</th>
                <th scope="col">Email</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
            <% contacts.forEach(function(contact){%>
              <tr>
                <td><%= contact.name %></td>
                <td><%= contact.number %></td>
                <td><%= contact.email %></td>
                <th scope="row">
                    <div class="">
                        <form action="/deleteContact" method="post">
                            <input class="form-check-input" name="id" type="checkbox" value=<%= contact._id%>  onchange="this.form.submit()"/>
                        </form>
                    </div>
                  </th>
              </tr>
            <%  }); %>   
            </tbody>
          </table>
          
    </div>
    <% if (sTable == "table-hide"){ %>
        <p class="container contacts">Add Contacts to Reveal Contacts Table</p>
    <% } %>
    
<%- include('partials/footer'); -%>